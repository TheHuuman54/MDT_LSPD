{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - La boutique Française{% endblock %}

{% block content %}
    <h1 class="text-center mt-4">Modifier mon mot de passe</h1>

    <hr>
    <div class="container">
        {% if notification_error %}
            <div class="alert alert-danger"> {{ notification_error }}</div>
        {% elseif notification_success %}
            <div class="alert alert-success">{{ notification_success }}</div>
        {% endif %}

        {{ form(form) }}
        <div class="d-flex justify-content-end">
            <a href="{{ path('app_account') }}"><button class="btn btn-warning">Retourner à mon compte</button></a>
        </div>
    </div>
    <hr>
{% endblock %}