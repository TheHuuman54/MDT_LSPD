{% extends 'base.html.twig' %}

{% block title %}Annuaire{% endblock %}

{% block content %}
<div class="container">
    <h1 class="text-center mt-5">Annuaire</h1>
    <div class="row mt-5">
        <div class="col-md-3">
            <h4 class="fs-5">Rechercher par nom :</h4>
            <form>
                {{ form_row(form.string) }}
                {{ form_widget(form.filtrer) }}
            </form>
        </div>
        <div class="col-md-9">
            <table class="table table-hover rounded bg-light ">
                <thead>
                <tr>
                    <th scope="col">Rang</th>
                    <th scope="col">Matricule</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Numéro de téléphone</th>
                </tr>
                </thead>
                <tbody>
                {% for agent in agents %}
                <tr>
                    <td>{{ agent.rank }}</td>
                    <td>{{ agent.matricule }}</td>
                    <td>{{ agent.firstname }}</td>
                    <td>{{ agent.lastname }}</td>
                    <td>{{ agent.telNumber }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
