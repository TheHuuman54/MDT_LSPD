{% extends 'base.html.twig' %}

{% block title %}Modifier : {{ civil.firstname }} {{ civil.lastname }}{% endblock %}

{% block content %}
    {% if is_granted('ROLE_LSPD') %}
    <h1 class="text-center mt-4">Modifier : {{ civil.firstname }} {{ civil.lastname }}</h1>

    <div class="container mt-4">
        {{ include('civil/_form.html.twig', {'button_label': 'Valider'}) }}

        <div class="d-flex justify-content-end">
            <a href="{{ path('app_civil_index') }}"><button class="btn btn-info">Retour aux civils</button></a>
            {{ include('civil/_delete_form.html.twig') }}
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('assets/js/pictureDelete.js') }}" defer></script>
    {% endblock %}
    {% else %}
        <p class="text-center mt-5">Désolé vous n'avez pas les droits nécessaires afin de visualiser ce contenu</p>
    {% endif %}
{% endblock %}
