{% extends 'base.html.twig' %}

{% block title %}Connexion - MDT LSPD{% endblock %}

{% block content %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mt-5 text-center text-light font-weight-normal">Connexion</h1>

            <div class="mt-4">
                <label for="inputEmail" class="text-light">Adresse Mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="mt-4">
                <label for="inputPassword" class="text-light">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>


            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <hr>
            <div class="footForm">
                <button class="btn btn-sm btn-success" type="submit">
                    Se connecter
                </button>
                {#<p class="float-right">Mot de passe oublié ? cliquez <a href="{{ path('app_reset_password') }}">ici</a>#}
                <br>
                <p class="d-flex justify-content-end text-light">Si vous ne possédez pas de compte, cliquez - <a href="{{ path('app_register') }}"> ici</a></p>
            </div>

        </form>
    </div>
{% endblock %}
