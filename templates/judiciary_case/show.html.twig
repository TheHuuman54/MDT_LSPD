{% extends 'base.html.twig' %}

{% block title %}JudiciaryCase{% endblock %}

{% block content %}
    <h1 class="text-center mt-4">Casier judiciare de : {{ judiciary_case.suspect.firstname }} {{ judiciary_case.suspect.lastname }}</h1>

    <div class="container ">
        <table class="table border border-4 rounded bg-light mt-5">
            <tbody>
            <tr>
                <th>Date</th>
                <td>{{ judiciary_case.date ? judiciary_case.date|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Magistrats sur l'affaire :</th>
                {% for m in judiciary_case.magistrate %}
                <td>{{ m.rank }} | {{ m.firstname }} {{ m.lastname }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Suspect :</th>
                <td>{{ judiciary_case.suspect.firstname }} {{ judiciary_case.suspect.lastname }}</td>
            </tr>
            <tr>
                <th>Décision</th>
                <td>{{ judiciary_case.decision }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_judiciary_case_index') }}">
                <button class="btn btn-warning">Retour à la liste</button>
            </a>
            {{ include('judiciary_case/_delete_form.html.twig') }}
            <a href="{{ path('app_judiciary_case_edit', {'id': judiciary_case.id}) }}">
                <button class="btn btn-success">
                    Valider
                </button>
            </a>
        </div>

    </div>
{% endblock %}
